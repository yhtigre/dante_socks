Host *
  GSSAPIAuthentication  no
  ServerAliveInterval   15
  
Host 172.16.10.*
  GSSAPIAuthentication  no
  ServerAliveInterval   15
  IdentityFile          ~/.ssh/id_rsa    #外部拠点B トンネル接続用秘密鍵

Host 172.16.20.*
  GSSAPIAuthentication  no
  ServerAliveInterval   15
  IdentityFile          ~/.ssh/id_rsa    #外部拠点C トンネル接続用秘密鍵
